{
	"manifest_version": 2,

	"name": "Karamel: View Reddit comments on Rooster Teeth",
	"short_name": "Karamel",
	"description": "Step up your viewing experience by embedding relevant Reddit comments under Rooster Teeth videos.",
	"version": "1.5.0",

	"browser_action": {
		"default_icon": "icon-48.png"
	},
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://roosterteeth.com/watch/*"],
			"js": ["index.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"permissions": ["https://www.reddit.com/", "storage"]
}
